@model List<Experiences>

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<!--begin::App Main-->
<main class="app-main">
    <!--begin::App Content Header-->
    <div class="app-content-header">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
                <div class="col-sm-6"><h3 class="mb-0">Tecrübe Düzenleme</h3></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-end">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Tecrübe Düzenleme İşi</li>
                    </ol>
                </div>
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::App Content Header-->
    <!--begin::App Content-->
    <div class="app-content">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" asp-for="@Model[i].Id" />

                <div class="form-group">
                    <label asp-for="@Model[i].Title" class="control-label"></label>
                    <input asp-for="@Model[i].Title" class="form-control" />
                    <span asp-validation-for="@Model[i].Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model[i].Text" class="control-label"></label>
                    <input asp-for="@Model[i].Text" class="form-control" />
                    <span asp-validation-for="@Model[i].Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model[i].Icon" class="control-label"></label>
                    <input asp-for="@Model[i].Icon" class="form-control" />
                    <span asp-validation-for="@Model[i].Icon" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model[i].DateTime" class="control-label"></label>
                    <input asp-for="@Model[i].DateTime" class="form-control" type="datetime-local" />
                    <span asp-validation-for="@Model[i].DateTime" class="text-danger"></span>
                </div>

                <hr />
            }

            <div class="form-group">
                <input type="submit" value="Save All" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>


        </div>
        <!--end::Container-->
    </div>
    <!--end::App Content-->
</main>
<!--end::App Main-->
